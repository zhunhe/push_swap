{
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: gcc build active file",
        "command": "/usr/bin/make",
        "args": ["-C", "${workspaceFolder}", "all"],
        "options": {
          "cwd": "/usr/bin",
          "env": {
            "DEBUG": "true"
          }
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ],
    "version": "2.0.0"
  }